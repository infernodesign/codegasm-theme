{
  "publisher": "InfernoDesign",
  "name": "codegasm-theme",
  "displayName": "Codegasm Theme",
  "description": "A dark theme for Visual Studio Code.",
  "version": "1.0.3",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/infernodesign/codegasm-theme.git"
  },
  "bugs": {
    "url": "https://github.com/infernodesign/codegasm-theme/issues"
  },
  "keywords": [
    "theme",
    "dark",
    "codegasm"
  ],
  "categories": [
    "Themes"
  ],
  "maintainers": [
    {
      "name": "Inferno Design",
      "email": "support@infernodesign.com"
    }
  ],
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.99.0"
  },
  "packageManager": "pnpm@10.20.0",
  "contributes": {
    "themes": [
      {
        "label": "Codegasm",
        "uiTheme": "vs-dark",
        "path": "./themes/codegasm.json"
      }
    ]
  },
  "galleryBanner": {
    "color": "#5c16c5",
    "theme": "dark"
  },
  "scripts": {
    "build": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts --include './src/**/*.ts'",
    "lint": "eslint . --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:fix": "pnpm run lint --fix",
    "package": "vsce package --no-dependencies --out ./releases/ --no-yarn",
    "prepare": "is-ci || lefthook install",
    "prepublishOnly": "pnpm run build",
    "publish": "bumpp --all && vsce publish --no-dependencies",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "vscode:prepublish": "pnpm run build"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@infernodesign/commitlint-config": "^1.2.0",
    "@infernodesign/eslint-config": "^1.9.0",
    "@infernodesign/typescript-config": "^1.3.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.9.2",
    "@types/tinycolor2": "^1.4.6",
    "@types/vscode": "^1.99.0",
    "@vscode/vsce": "^3.6.2",
    "bumpp": "^10.3.1",
    "eslint": "^9.39.0",
    "fs-extra": "^11.3.2",
    "is-ci": "^4.1.0",
    "lefthook": "^2.0.2",
    "markdownlint-cli2": "^0.18.1",
    "ovsx": "^0.10.6",
    "prettier": "^3.6.2",
    "taze": "^19.9.0",
    "tinycolor2": "^1.6.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@vscode/vsce-sign",
      "esbuild",
      "lefthook"
    ]
  }
}
