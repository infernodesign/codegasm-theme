{
  // Written out individually so users can override in their settings.json
  "[env]": {
    "editor.formatOnSave": false
  },
  "[html]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[javascript][javascriptreact][typescript][typescriptreact]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "never"
    }
  },
  "[json][jsonc]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[mdx][markdown]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.fixAll.markdownlint": "explicit"
    }
  },
  "[toml]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[xml]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[yaml][github-actions-workflow]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "editor.formatOnPaste": false,
  "editor.formatOnSave": false,
  "editor.formatOnType": false,
  "eslint.codeActionsOnSave.mode": "all",
  "eslint.enable": true,
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,
  "eslint.problems.shortenToSingleLine": true,
  // Silent the stylistic rules in the IDE, but still auto-fix them
  "eslint.rules.customizations": [
    { "rule": "style/*", "severity": "off" },
    { "rule": "*-indent", "severity": "off" },
    { "rule": "*-spacing", "severity": "off" },
    { "rule": "*-spaces", "severity": "off" },
    { "rule": "*-order", "severity": "off" },
    { "rule": "*-dangle", "severity": "off" },
    { "rule": "*-newline", "severity": "off" },
    { "rule": "*quotes", "severity": "off" },
    { "rule": "*semi", "severity": "off" }
  ],
  "eslint.useESLintClass": true,
  "eslint.useFlatConfig": true,
  "eslint.validate": [
    "github-actions-workflow",
    "html",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "markdown",
    "toml",
    "typescript",
    "typescriptreact",
    "xml",
    "yaml"
  ],
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "markdownlint.configFile": ".markdownlint-cli2.jsonc",
  "markdown.validate.enabled": true,
  "markdown.validate.referenceLinks.enabled": "ignore",
  "npm.packageManager": "pnpm",
  "prettier.enable": false,
  "search.exclude": {
    "**/.cache": true,
    "**/.turbo": true,
    "**/dist": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true
  },
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.preferences.preferTypeOnlyAutoImports": true,
  "typescript.tsdk": "node_modules/typescript/lib"
}
